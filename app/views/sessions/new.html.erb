<div class="welcomepage">
  <div class="welcom">Welcome to the MC-zemi!!</div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :名前 %>
        <%= f.text_field :name, class: 'form-control formcont' %>

        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control formcont' %>

        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>

      <p class="hatusanka">初参加の方はこちら <%= link_to "カルテ作成", signup_path %></p>
    </div>
  </div>
</div>