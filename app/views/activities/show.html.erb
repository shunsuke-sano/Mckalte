<h3 class="username"><%= @activity.title %><h3>
<% if @date.present? %>
  <h5 class="actday" ><%= @date.strftime("%m月%d日") %></h5>
<% end %>
  <div class="row">
  <div class="col-sm-4">
    <h5 class="target"><%= "基礎目標" %></h5>
    <p class="targetname"><%= @activity.basetarget %></p>
    <h5 class="comment"><%= "コメント/反省・改善点" %></h5>
    <% if @activity.basecomment.present? %>
      <p class="commentcontent"><%= @activity.basecomment %></p>
    <% else %>
      <p class="commentcontent"><%= "コメントを書き込もう" %></p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h5 class="target"><%= "表現目標" %></h5>
    <p class="targetname"><%= @activity.extarget %></p>
    <h5 class="comment"><%= "コメント/反省・改善点" %></h5>
    <% if @activity.excomment.present? %>
      <p class="commentcontent"><%= @activity.excomment %></p>
    <% else %>
      <p class="commentcontent"><%= "コメントを書き込もう" %></p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h5 class="target"><%= "司会目標" %></h5>
    <p class="targetname"><%= @activity.mctarget %></p>
    <h5 class="comment"><%= "コメント/反省・改善点" %></h5>
    <% if @activity.mccomment.present? %>
      <p class="commentcontent"><%= @activity.mccomment %></p>
    <% else %>
      <p class="commentcontent"><%= "コメントを書き込もう" %></p>
    <% end %>
  </div>
  </div>
  <h5 class="impmark">感想</h5>
  <p class="imp">
    <%= @activity.impression unless @activity.impression.nil?%>
  </p>
  <div class="feedback">
    <h5 class="fbcomment">ゼミスタからのコメント</h5>
    <p class="fbcontent">
      <%= @activity.fb unless @activity.fb.nil? %>
    </p>
  </div>
  <div class="editbuttun">
    <%= link_to "編集", edit_activity_path(@activity) %>
  </div>
  <div class="butn">
    <%= link_to "ユーザページへ", user_path(@activity.user) %>
  </div>
  <% if current_user.admin? %>
    <%= link_to :back do %>
      <p class="return">戻る</p>
    <% end %>
  <% end %>