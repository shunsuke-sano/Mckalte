<h1>活動を記録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @activity, local: true) do |f| %>

      <%= f.label :活動名 %>
      <%= f.select :title, [["わんちゃんMC", "わんちゃんMC"],["まじかMC", "まじかMC"],["はてなぼっくすMC", "はてなぼっくすMC"],["にこいちMC", "にこいちMC"],["ソロ充MC", "ソロ充MC"]], include_blank: "選択してください" %>

      <%= f.label :日付 %>
      <%= f.datetime_field :day, class: 'form-control' %>

      
      <%= f.select :basetarget, [["姿勢", "姿勢"],["摩擦", "摩擦"]], include_blank: "基礎目標を選んでください" %>

      
      <%= f.select :extarget, [["トーン変化（高）", "トーン変化（高）"],["トーン変化（低）", "トーン変化（低）"]], include_blank: "表現目標を選んでください" %>

      
      <%= f.select :mctarget, [["ゲスト応対", "ゲスト応対"],["観客を巻き込む", "観客を巻き込む"]], include_blank: "司会目標を選んでください" %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>