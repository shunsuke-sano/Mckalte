<h1>カルテ新着順</h1>
<%= link_to "登録者一覧はこちら", users_path %>
<% if @activities.any? %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">名前</th>
            <th scope="col">活動名</th>
            <th scope="col">コメント</th>
            <th scope="col">更新日</th>
            <th scope="col">FB</th>
            <th scope="col">同録</th>
          </tr>
        </thead>
         <% @activities.each do |a| %>
      <tbody>
          <tr>
            <th scope="row"><%= link_to a.user.name, user_path(a.user) %></th>
            <td><%= link_to a.title, activity_path(a) %>
            <td><%= link_to "コメントする",  edit_activity_path(a) %></td>
            <td><%= a.updated_at %></td>
            <% if a.fb.present? %>
              <td class="sumi"><%= "済" %></td>
            <% else %>
              <td class="mada"><%= "末" %>
            <% end %>
            <% if a.douroku == 0 %>
              <td><%= "不可" %></td>
            <% else %>
              <td><%= "可" %>
            <% end %>
          </tr>    
      </tbody>
         <% end %> 
     </table>
<% end %>
<%= paginate @activities %>